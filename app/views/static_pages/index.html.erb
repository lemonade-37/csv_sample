<div class="flex flex-col space-y-24 mb-10">
  <%= link_to 'CSVエクスポート', '#', class: 'btn btn-primary w-40' %>

  <div class="overflow-x-auto">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>name</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each_with_index do |user, index| %>
          <tr>
            <th><%= index + 1 %></th>
            <td><%= user.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="overflow-x-auto">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>user</th>
          <th>price</th>
        </tr>
      </thead>
      <tbody>
        <% @sales.each_with_index do |sale, index| %>
          <tr>
            <th><%= index + 1 %></th>
            <td><%= sale.user.name %></td>
            <td><%= sale.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="overflow-x-auto">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>銀行コード</th>
          <th>支店コード</th>
          <th>預金種目</th>
          <th>口座番号</th>
          <th>受取口座名義</th>
        </tr>
      </thead>
      <tbody>
        <% @account_informations.each_with_index do |account_information, index| %>
          <tr>
            <th><%= index + 1 %></th>
            <td><%= account_information.bank_code %></td>
            <td><%= account_information.branch_code %></td>
            <td><%= translate_deposit_type(account_information.deposit_type) %></td>
            <td><%= account_information.account_number %></td>
            <td><%= account_information.bank_account %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
